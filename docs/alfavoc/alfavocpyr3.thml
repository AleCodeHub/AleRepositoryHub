<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  <title>Vocabulario Visual</title>
  <style>
    body {
      margin: 0;
      font-family: sans-serif;
      background: white;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    #pantallaCarga {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      z-index: 1000;
    }

    #pantallaInicio {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 999;
    }

    #btnInicio {
      padding: 1rem 2rem;
      font-size: 1.5rem;
      background: black;
      color: white;
      border: none;
      border-radius: 10px;
      cursor: pointer;
    }

    #barraProgresoContainer {
      width: 80%;
      background: #ccc;
      border-radius: 10px;
      overflow: hidden;
    }

    #barraProgreso {
      height: 20px;
      background: #4caf50;
      width: 0%;
      transition: width 0.2s;
    }

    #zonaJuego {
      position: relative;
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    #imagenVocabulario {
      max-height: 40vh;
      transition: transform 0.6s ease, opacity 0.4s ease;
      position: absolute;
    }

    #palabraCorrecta {
      margin-top: 22vh;
      padding: 0.2rem 1rem;
      font-size: 2rem;
      border-radius: 80px;
      text-align: center;
      transform: rotate(0deg);
      transition: opacity 0.4s ease;
      cursor: pointer;
      z-index: 2;
    }

    #controles {
      position: absolute;
      bottom: 2rem;
      width: 100%;
      display: flex;
      justify-content: space-between;
      padding: 0 2rem;
      font-size: 2rem;
    }

    .flecha {
      background: black;
      color: white;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      user-select: none;
    }
  </style>
</head>
<body>
  <div id="pantallaCarga">
    <p>Cargando recursos...</p>
    <div id="barraProgresoContainer">
      <div id="barraProgreso"></div>
    </div>
  </div>

  <div id="pantallaInicio" style="display: none;">
    <button id="btnInicio">Iniciar</button>
  </div>

  <div id="zonaJuego">
    <img id="imagenVocabulario" src="" alt="Imagen">
    <div id="palabraCorrecta"></div>
    <div id="controles">
      <div id="btnAtras" class="flecha" style="visibility: hidden">ðŸ¡¸</div>
      <div id="btnAdelante" class="flecha">ðŸ¡º</div>
    </div>
  </div>

  <script>
    const palabrasCorrectas = [...]; // sin cambios
    const nombresImagenes = [...].map(name => `assets/images/${name}`);
    const sonidos = [...].map(name => `assets/sounds/${name}`);

    const img = document.getElementById("imagenVocabulario");
    const palabraDiv = document.getElementById("palabraCorrecta");
    const btnAdelante = document.getElementById("btnAdelante");
    const btnAtras = document.getElementById("btnAtras");
    const pantallaCarga = document.getElementById("pantallaCarga");
    const pantallaInicio = document.getElementById("pantallaInicio");
    const btnInicio = document.getElementById("btnInicio");
    const barraProgreso = document.getElementById("barraProgreso");

    const colores = ["#b0f2c2", "#fff8a6", "#ffc8dd"];
    const rotaciones = ["rotate(-7deg)", "rotate(3deg)", "rotate(-5deg)"];

    let actual = 0;
    let bloqueado = false;

    function precargar(recursos, callback) {
      let cargados = 0;
      recursos.forEach(src => {
        const el = src.endsWith('.mp3') ? new Audio() : new Image();
        el.src = src;
        el.onload = el.oncanplaythrough = () => {
          cargados++;
          barraProgreso.style.width = `${(cargados / recursos.length) * 100}%`;
          if (cargados === recursos.length) callback();
        };
      });
    }

    function mostrar(i, direccion = 'adelante') {
      bloqueado = true;

      const nuevaImg = new Image();
      nuevaImg.src = nombresImagenes[i];
      nuevaImg.id = "imagenVocabulario";
      nuevaImg.style.position = 'absolute';
      nuevaImg.style.maxHeight = '40vh';
      nuevaImg.style.opacity = '0';
      nuevaImg.style.transition = 'transform 0.6s ease, opacity 0.4s ease';
      nuevaImg.style.transform = `translateX(${direccion === 'adelante' ? '100vw' : '-100vw'})`;

      zonaJuego.appendChild(nuevaImg);

      requestAnimationFrame(() => {
        nuevaImg.style.transform = 'translateX(0)';
        nuevaImg.style.opacity = '1';
      });

      const anterior = document.querySelectorAll('#zonaJuego img')[0];
      if (anterior) {
        anterior.style.transform = `translateX(${direccion === 'adelante' ? '-100vw' : '100vw'})`;
        anterior.style.opacity = '0';
        setTimeout(() => anterior.remove(), 600);
      }

      palabraDiv.textContent = palabrasCorrectas[i];
      palabraDiv.style.backgroundColor = colores[i % 3];
      palabraDiv.style.transform = rotaciones[i % 3];
      palabraDiv.style.opacity = 0;

      setTimeout(() => {
        palabraDiv.style.opacity = 1;
        reproducirSonido(i);
      }, 300);

      actualizarFlechas();
    }

    function actualizarFlechas() {
      btnAtras.style.visibility = actual > 0 ? 'visible' : 'hidden';
      btnAdelante.style.visibility = actual < palabrasCorrectas.length - 1 ? 'visible' : 'hidden';
    }

    function reproducirSonido(i) {
      if (bloqueado) return;
      bloqueado = true;
      const audio = new Audio(sonidos[i]);
      audio.play();
      audio.onended = () => bloqueado = false;
    }

    palabraDiv.addEventListener("click", () => reproducirSonido(actual));
    zonaJuego.addEventListener("click", e => {
      if (e.target.id === "imagenVocabulario") reproducirSonido(actual);
    });

    btnAdelante.addEventListener("click", () => {
      if (actual < palabrasCorrectas.length - 1 && !bloqueado) {
        actual++;
        mostrar(actual, 'adelante');
      }
    });

    btnAtras.addEventListener("click", () => {
      if (actual > 0 && !bloqueado) {
        actual--;
        mostrar(actual, 'atras');
      }
    });

    btnInicio.addEventListener("click", () => {
      pantallaInicio.style.display = 'none';
      mostrar(actual);
    });

    precargar([...nombresImagenes, ...sonidos], () => {
      pantallaCarga.style.display = 'none';
      pantallaInicio.style.display = 'flex';
    });
  </script>
</body>
</html>
